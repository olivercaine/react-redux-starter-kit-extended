{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "src",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "exclude": [
    "node_modules",
    "*/**/*.spec.ts"
  ],
  "diagnostics": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true
}
