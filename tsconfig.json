{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "lib": ["es2015"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "node",
      "mocha",
      "chai"
    ]
  },
  "files": [
    "./lib/index.ts"
  ],
  "checkJs": true,
  "diagnostics": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true
}
