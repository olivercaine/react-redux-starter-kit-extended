{
    "extends": "tslint:recommended",
    "rules": {
        "no-null-keyword": true,
        "no-unused-variable": true,
        "semicolon": false,
        "member-access": [true, "no-public"],
        "no-default-export": true,        
        "quotemark": [
            true,
            "single",
            "avoid-escape"
        ]
    }
}
